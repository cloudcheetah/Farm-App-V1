<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/task_name"
        android:textSize="20dp"
        android:hint="Task name"
        android:background="@drawable/rectangular_edittext"
        android:drawableLeft="@mipmap/ic_business_center_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/task_start_date"
        android:textSize="20dp"
        android:hint="Task Start date"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/rectangular_edittext"
        android:drawableLeft="@mipmap/ic_date_range_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/task_end_date"
        android:textSize="20dp"
        android:hint="Task End date"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/rectangular_edittext"
        android:drawableLeft="@mipmap/ic_date_range_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/task_budget"
        android:textSize="20dp"
        android:hint="Budget"
        android:background="@drawable/rectangular_edittext"
        android:drawableLeft="@mipmap/ic_attach_money_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/task_duration"
        android:textSize="20dp"
        android:hint="Duration"
        android:background="@drawable/rectangular_edittext"
        android:drawableLeft="@mipmap/ic_access_time_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/person_responsible"
        android:background="@drawable/rectangular_edittext"
        android:drawableLeft="@mipmap/ic_person_black_24dp"
        android:hint="Person Responsible"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/task_scope"
        android:textSize="20dp"
        android:maxLength="160"
        android:hint="Scope/Description"
        android:singleLine="false"
        android:gravity="top|left"
        android:lines="5"
        android:background="@drawable/rectangular_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>