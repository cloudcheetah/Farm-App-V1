<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/project_name"
        android:textSize="20dp"
        android:hint="Project name"
        android:background="@drawable/rectangular_edittext"
        android:drawableLeft="@mipmap/ic_business_center_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/start_date"
        android:textSize="20dp"
        android:hint="Start date"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/rectangular_edittext"
        android:drawableLeft="@mipmap/ic_date_range_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/end_date"
        android:textSize="20dp"
        android:hint="End date"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/rectangular_edittext"
        android:drawableLeft="@mipmap/ic_date_range_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/project_budget"
        android:textSize="20dp"
        android:hint="Estimated Cost"
        android:background="@drawable/rectangular_edittext"
        android:drawableLeft="@mipmap/ic_attach_money_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/project_description"
        android:textSize="20dp"
        android:maxLength="160"
        android:hint="Project details"
        android:singleLine="false"
        android:gravity="top|left"
        android:lines="5"
        android:background="@drawable/rectangular_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>